<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="s1" class="org.kodnest.bean.Laptop">
		<property name="serialNumber" value="101"/>
		<property name="manufacturer" value="Dell"/>
		<property name="cost" value="85000.00"/>
	</bean>
	<bean id="s2" class="org.kodnest.bean.Laptop">
		<constructor-arg name="serialNumber" value="102"/>
		<constructor-arg name="manufacturer" value="HP"/>
		<constructor-arg name="cost" value="85000.00"/>
	</bean>
</beans>