<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean id="trainer1" class="org.kodnest.bean.Trainer">
	<property name= "id" value="1234"/>
	<property name= "name" value="Antony Das"/>
	<property name= "salary" value="12345.12"/>	
</bean>

<bean id="university" class="org.kodnest.bean.University">
	<property name= "id" value="111"/>
	<property name= "name" value="Anna University"/>
	<property name= "trainer" ref="trainer1"/>	
</bean>
</beans>